 <div class="container ">
    <div class="center-items-register">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <table >

            <!--Name-->
            <tr>
              <th>

                <div class="field">
                  <%= f.label :first_name %><br />
                  <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
                </div>

              </th>
            
              <th>

                <div class="field">
                  <%= f.label :last_name %><br />
                  <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
                </div>

              </th>
            </tr>

          <!--Name-->

          <!--Email -->

            <tr>

              <th>

                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                </div>

              </th>
              <th>
                <p></p>
              </th>

            <tr>

          <!--Email -->


         <!--Street & Number -->

        <tr>
          <th>

            <div class="field">
              <%= f.label :street %><br />
              <%= f.text_field :street, class: 'form-control' %>
            </div>

          </th>

          <th>

           <div class="field">
            <%= f.label :house_number %><br />
            <%= f.text_field :house_number, class: 'form-control' %>
            </div>

          </th>
        </tr>

        <!--Street & Number -->

        <!--City & Zip -->

        <tr>
          <th>

            <div class="field">
              <%= f.label :city %><br />
              <%= f.text_field :city, class: 'form-control' %>
            </div>

          </th>

          <th>

            <div class="field">
              <%= f.label :zip_code %><br />
              <%= f.text_field :zip_code, class: 'form-control' %>
            </div>

          </th>
        </tr>
      

      <!--City & Zip -->

      <!--PW -->

      
        <tr>
          <th>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>

          </th>

          <th>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

           </th>
        <tr>
      </table>

      <!--PW -->


        <div class="actions">
          <%= f.submit "Sign up", class: 'btn form margin' %>
        </div>
      <% end %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>
        <%# link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path %>
    </div>
  </div>
