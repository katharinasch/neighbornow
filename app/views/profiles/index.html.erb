<div class="container">
<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user.first_name%></td>
        <td><%= profile.user.last_name%></td></tr>
        <td><%= link_to 'Show user profile', user_profile_path(current_user, profile) %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

</div>