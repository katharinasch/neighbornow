<div class="container">
<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>About</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.about %></td>
        <td><%= profile.rating %></td>
        <td><%= link_to 'Show', user_profile_path(current_user.id, current_user.profile.id) %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(current_user.id, current_user.profile.id) %></td>
        <td><%= link_to 'Delete', user_profile_path(current_user.id, current_user.profile.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>