<div class="container">
<h1>Editing Profile</h1>

<%= form_with(model: @profile, url: user_profile_path, method: :patch) do |form| %>
 

  <div class="field">
    <%= form.label :about %>
    <%= form.text_area :about %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating %>
  </div>

  <div class="field">
    <%= form.file_field :avatar %>
    <% form.label "Profile photo" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


</div>
